<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type and Run"


        style="@style/txtstyle"
        />

    <TextView
        android:id="@+id/txt1"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make"
        android:paddingTop="50dp"
        style="@style/txtstyle"
        />
    <EditText
        android:id="@+id/num1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt1"

        style="@style/inputstyle"

        />
    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year"
        android:paddingTop="30dp"
        android:layout_below="@+id/num1"
        style="@style/txtstyle"
        />

    <EditText
        android:id="@+id/num2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt2"
        android:inputType="numberDecimal"
        style="@style/inputstyle"


        />
    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color"
        android:paddingTop="30dp"
        android:layout_below="@+id/num2"
        style="@style/txtstyle"
        />

    <EditText
        android:id="@+id/num3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt3"

        style="@style/inputstyle"

        />
    <TextView
        android:id="@+id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purchase Price (Â£)"
        android:paddingTop="30dp"
        android:layout_below="@+id/num3"
        style="@style/txtstyle"
        />

    <EditText
        android:id="@+id/num4"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt4"
        android:inputType="numberDecimal"
        style="@style/inputstyle"

        />
    <TextView
        android:id="@+id/txt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Engine Size (l)"
        android:paddingTop="30dp"
        android:layout_below="@+id/num4"
        style="@style/txtstyle"
        />

    <EditText
        android:id="@+id/num5"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt5"
        android:inputType="numberDecimal"
        style="@style/inputstyle"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn1"
        android:text="Make Car"
        android:layout_below="@+id/num5"
        style="@style/buttonstyle"/>

    <TextView
        android:id="@+id/txtoutput"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:paddingTop="20dp"
        android:layout_below="@+id/btn1"
        android:background="@android:color/holo_green_light"
        style="@style/txtoutput"
        />


</RelativeLayout>
</ScrollView>